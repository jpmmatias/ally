<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="/Imagens/favicon.ico">
    <link rel="stylesheet" href="/CSS/theme.css">
    <title>Login - Ally</title>
</head>


<body>
    {{!-- skip links --}}
    <ul class="skip-links">

        <li><a href="#conteudo">Pular para login</a></li>
        <li><a href="#rodape">Pular para rodapé</a></li>

    </ul>
    {{!-- / skip links --}}
  <div id="conta">
    <header id="logoLogin">
        <a href="/">
            <img src="/Imagens/logo-ally.svg" alt="Logo do Ally">
        </a>
    </header>
    <main id="conteudo">
        <section id="loginSection">
            <div class="container">
                <h1>Entrar</h1>
                <form action="/users/login" method="POST">
                    <div class="campo">
                        <label for="email">Email</label>
                        <input id="email" type="email" name='email' placeholder="Insira seu e-mail">
                    </div>
                    <div class="campo">

                        <label for="password">Senha</label>
                        <div class="mostrar-senha">
                            <input class="active" id="password" type="password" name="password"
                                placeholder="Digite sua senha">
                        </div>
                    </div>
                    <div class="campo">
                        <input value="Login" type="submit">
                    </div>
                </form>
                <div class="ou">Ou</div>
                <div class="google-btn">
                    <a aria-label="Link para entrar usando o google" href="/users/login/google">
                        <div class="google-icon-wrapper">
                            <img class="google-icon"
                                src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"
                                alt="Icone do Goole">
                        </div>
                        <span class="btn-text">Continuar com Google</span>
                    </a>
                </div>
                <div class="npossui">
                    Não possui conta? <a href="/users/register">Entre aqui</a>
                </div>
            </div>
        </section>

    </main>

<noscript>Seu navegador não dá suporte a javascript</noscript>  
    <script>

        var inputPass3 = document.getElementById('password'),
            btn = document.getElementById('btn-senha');

        btn.onclick = function () {
          
            if (inputPass3.className == 'active') {
                inputPass3.setAttribute('type', 'text');
                btn.textContent = 'Esconder';
                inputPass3.className = '';
                btn.classList.add("btn-active");

            } else {
                inputPass3.setAttribute('type', 'password');
                btn.textContent = 'Mostrar';
                inputPass3.className = 'active';
                btn.classList.remove("btn-active");
            }

        }


    </script>
