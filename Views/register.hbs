<h3> Ally</h3>
<div class="section">
    <p class="lead">Acessibilidade Digital</p>
</div>
<div class="divider"></div>
<div class="section">
    <div class="row">
        {{#if tester}}
        <form class="col s12" action="/users/register/tester" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input id="nome" type="name" name="nome" class="validate" value={{tipoDiferente nome 'undefined'}}>
                    <label for="email">Nome</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" type="email" name="email" class="validate"
                        value={{tipoDiferente email 'undefined'}}>
                    <label for="email">Email</label>

                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="password">Senha</label>
                    <input id="senha" type="password" name="senha" value={{tipoDiferente senha 'undefined'}}>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="password">Confirmar Senha</label>
                    <input id="senha2" type="password" name="senha2" value={{tipoDiferente senha2 'undefined'}}>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Enviar

            </button>
        </form>
        {{else}}
        <form class="col s12" action="/users/register" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input id="nome" type="name" name="nome" class="validate" value={{tipoDiferente nome 'undefined'}}>
                    <label for="email">Nome</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" type="email" name="email" class="validate"
                        value={{tipoDiferente email 'undefined'}}>
                    <label for="email">Email</label>

                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="password">Senha</label>
                    <input id="senha" type="password" name="senha" value={{tipoDiferente senha 'undefined'}}>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="password">Confirmar Senha</label>
                    <input id="senha2" type="password" name="senha2" value={{tipoDiferente senha2 'undefined'}}>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Enviar

            </button>
        </form>
        {{/if}}

    </div>
    <a href="/users/login/google" class="btn red darken-1">
        <i class="fab fa-google left"></i> Log In com Google
    </a>
</div>