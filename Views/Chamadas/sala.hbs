<h1>Sala</h1>
<div id="video-grid">

</div>
<button id="gravar" class=' btn blue'>Gravar tela</button>
<button id="parar" class=' btn blue'>Parar de gravar tela</button>
<button id="compartilharTela" class=' btn blue'>Compartilhar tela</button>
<button id="pararDeCompartilhar" style="display: none;" class=' btn blue'>Parar de compartilhar tela</button>
<div>
    <div class="col s6">
        <h3>Tarefas</h3>
        <ul>
            {{#each teste.tarefas as |tarefa|}}
            <li>{{tarefa}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="col s6">
        <h3>Anotações</h3>
        <textarea name="anotacao" id="anotacoes" placeholder="Escreve sua anotações"></textarea>
        <button class='btnanotacao'>Salvar anotação</button>
    </div>
    <div class="gravacao">
        <video id="gravacao" autoplay="true"></video>
    </div>
</div>


<script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
