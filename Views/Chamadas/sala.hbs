<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/CSS/theme.css">
    <script src="https://kit.fontawesome.com/9d7bb7e31a.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <title>Sala de Video Chamada - Ally</title>
</head>


<body>

    {{> _skip_links}}
    <div id="dashboard">

        <!-- header -->
        <header class="headerDashboard">
            <button class="menutoggle" aria-expanded="false">Menu</button>
            <h1>Videochamada</h1>
            <div class="utilities">
                <span class="user">Olá  {{user}}!</span>
                <a tabindex="0" class="logout" href="/users/logout">Sair</a>
            </div>
        </header>
        <!-- /header -->
        {{> _sidebar}}

        <main id="conteudo">
            <!-- breadcrumbs -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Testes </a>
                    </li>
                    <li class="breadcrumb-item"><a href="/testes/{{teste._id}}">{{teste.nome}} </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Videochamada</li>
                </ol>
            </nav>
            <!-- / breadcrumbs -->

            <div id="sala">
                <div class="videoContainer">
                    <p id="remote-video-text"></p>
                    <div id="remoteContainer">
                        <video id="remote-video" autoplay playsinline></video>
                    </div>
                    <div id="moveable">
                        <video id="local-video" autoplay muted playsinline></video>
                    </div>
                    <div class="buttonsAll">
                        <div class="buttonContainer">
                            <button class="hoverButton" onclick="{muteMicrophone()}">
                                <i id="mic-icon" class="fas fa-microphone fa-xs"></i>
                            </button>
                            <div class="HoverState" id="mic-text">Mutar</div>
                        </div>
                        <div class="buttonContainer">
                            <button class="hoverButton" id="share-button" onclick="{swap()}">
                                <i id="swap-icon" class="fas fa-desktop fa-xs"></i>
                            </button>
                            <div class="HoverState" id="swap-text">Compartilhar Tela (quando clicado sua tela
                                começará a ser
                                gravada)</div>
                        </div>
                        <div class="buttonContainer" role="button">
                            <button class="hoverButton" onclick="{window.location.href = '/dashboard'}">
                                <i class="fas fa-phone-slash fa-xs"></i>
                            </button>
                            <div class="HoverState">Terminar Chamada</div>
                        </div>
                    </div>
                </div>
                <div id="anotacoes">
                    <div id="todasAnotacoes">
                        <div class="todasAnotacoesHead">
                            <figure class="anotationIcon">
                                <img src="/Imagens/noteicon.svg" alt="Icone de anotação">
                            </figure>
                            <h3>Anotações</h3>
                        </div>
                        <div id="wrapper">
                            <ul role="listbox">

                            </ul>
                        </div>
                    </div>
                    <form>
                        <input type="text" autocomplete="off" name="anotacao" placeholder="Escreva anotação..">
                        <input type="submit" class="btnanotacao" value="Salvar Anotação">
                    </form>
                </div>
            </div>

        </main>

        <!-- footer -->
        <footer id="rodape" class="footerDashboard">
            <p><span class="footer__copyright">&copy;</span> Ally 2020</p>
            <a href="/contato">Entre em contato</a>
        </footer>
        <!-- / footer -->

    </div>




    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous" defer></script>
    <script src="https://cdn.rawgit.com/muaz-khan/DetectRTC/master/DetectRTC.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/Javascript/chamadas.js" defer></script>
    <script src="/Javascript/mandarAnotacao.js" defer></script>
    <script src="/Javascript/mobileDashboard.js"></script>